@model Bookflix.Views.Libros.DatoDeLibroViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cargar Metadatos</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Libro.ISBN" class="control-label"></label>
                <input asp-for="Libro.ISBN" class="form-control" />
                <span asp-validation-for="Libro.ISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libro.Titulo" class="control-label"></label>
                <input asp-for="Libro.Titulo" class="form-control" />
                <span asp-validation-for="Libro.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libro.FechaPublicacion" class="control-label"></label>
                <input asp-for="Libro.FechaPublicacion" class="form-control" />
                <span asp-validation-for="Libro.FechaPublicacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libro.Sinopsis" class="control-label"></label>
                <textarea asp-for="Libro.Sinopsis" class="form-control" /></textarea>
                <span asp-validation-for="Libro.Sinopsis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Libro.Editorial" class="control-label"></label>
                <select asp-for="Libro.Editorial">
                    <option value="">Seleccione una Editorial</option>
                    <options asp-items="@{new SelectList(Model.Editoriales, "Nombre", "Nombre"); }" />
                </select>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Cargar Metadatos" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
